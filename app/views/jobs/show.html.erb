<%= form_for(@job) do |f| %>
  <!--[if !IE]> --><div class="notIE"><!-- <![endif]-->
  <label class="category-title" />
  <%= f.collection_select :job_category_id, JobCategory.all, :id, :title, {}, {:class => 'category-title'} %>
  <!--[if !IE]> --></div> <!-- <![endif]-->
  <section>
    <div class="icon levels">&nbsp;</div>
    <div class="field">
      <%= f.label "Nivel de limpieza" %>
      <!--[if !IE]> --><div class="notIE"><!-- <![endif]-->
      <label />
      <%= f.collection_select :level, Level.all, :id, :title, {:include_blank => 'Nivel de limpieza'} %>
      <!--[if !IE]> --></div> <!-- <![endif]-->
    </div>
    <div class="field">
      <%= f.label "Tamaño del hogar" %>
      <!--[if !IE]> --><div class="notIE"><!-- <![endif]-->
      <label />
      <%= f.collection_select(:floor, Floor.all, :id, :title, {:include_blank => 'Número de pisos'}) %>
      <!--[if !IE]> --></div> <!-- <![endif]-->
      <!--[if !IE]> --><div class="notIE"><!-- <![endif]-->
      <label />
      <%= f.collection_select(:room, Room.all, :id, :title, {:include_blank => 'Número de dormitorios'}) %>
      <!--[if !IE]> --></div> <!-- <![endif]-->
      <!--[if !IE]> --><div class="notIE"><!-- <![endif]-->
      <label />
      <%= f.collection_select(:bathroom, Bathroom.all, :id, :title, {:include_blank => 'Número de baños'}) %>
      <!--[if !IE]> --></div> <!-- <![endif]-->
    </div>
    <div class="field">
      <%= f.radio_button :material, true %> Tengo todos los artículos de limpieza en casa<br/>
      <%= f.radio_button :material, false %> El handy debe traer material de limpieza
    </div>
    <div class="field">
      <div class="show" href="#">Ver notas adicionales</div>
      <%= f.text_area :notes, {:placeholder => "Agrega notas adicionales aquí", :class => 'hidden' } %>
    </div>
  </section>
  <section>
    <div class="icon calendar">&nbsp;</div>
    <div class="field when">
      <%= f.label 'Requiero que la limpieza se lleve a cabo:' %>
      <%= f.datetime_select :when %>
    </div>
  </section>
  <section>
    <div class="icon money">&nbsp;</div>
    <div class="field">
      <%= f.label '¿Cuánto estás dispuesto a pagar por esta tarea?' %><br/>
      <%= f.text_field :offer, {:placeholder => 'Oferta promedio: $150.00 - $300.00'} %>
      <small>El pago se hace hasta que la tarea ha sido completada.</small>
    </div>
  </section>
  <%= link_to 'Ir al listado de tareas', jobs_path %>
<% end %>