<h1>Listing jobs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Level</th>
      <th>Floor</th>
      <th>Room</th>
      <th>Bathroom</th>
      <th>Material</th>
      <th>Notes</th>
      <th>Address</th>
      <th>Location ref</th>
      <th>Second address</th>
      <th>Stored address</th>
      <th>Map</th>
      <th>When</th>
      <th>Offer</th>
      <th>Private</th>
      <th>Auto assign</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.title %></td>
        <td><%= job.level %></td>
        <td><%= job.floor %></td>
        <td><%= job.room %></td>
        <td><%= job.bathroom %></td>
        <td><%= job.material %></td>
        <td><%= job.notes %></td>
        <td><%= job.address %></td>
        <td><%= job.location_ref %></td>
        <td><%= job.second_address %></td>
        <td><%= job.stored_address %></td>
        <td><%= job.map %></td>
        <td><%= job.when %></td>
        <td><%= job.offer %></td>
        <td><%= job.private %></td>
        <td><%= job.auto_assign %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

