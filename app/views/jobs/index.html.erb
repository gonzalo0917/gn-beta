<section id="listing">
  <% @jobs.each do |job| %>
    <% cat = JobCategory.find_by_id(job.job_category_id) %>
    <div class="item">
    <% if job.private == true %>
      <p class="title"><%= link_to cat.title, job %></p>
      <p class="offer"><%= number_to_currency(job.offer) %></p>
    <% end %>
    </div>
  <% end %>
</section>
<div class="clearfix">&nbsp;</div>