<%= form_tag do %> 
  <div class="field">
    <%= label_tag :email, 'Email:' %> <%= text_field_tag :email, params[:email] %>
  </div>
  <div class="field">
    <%= label_tag :password, 'Password:' %> <%= password_field_tag :password, params[:password] %>
  </div>
  <div class="field">
    <%= submit_tag "Iniciar sesión" %>
  </div>
  <div class="field">
    ¿Aún no tienes cuenta?, <%= link_to "¡Regístrate gratis!", new_user_path %>
  </div>
<% end %>
